<Window x:Class="chessui.View.ProgressLoggerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chessui.View"
        mc:Ignorable="d"
        Title="ProgressLoggerWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <RichTextBox x:Name="LoggerTextBox" Grid.Row="1" Width="Auto" Margin="0" VerticalScrollBarVisibility="Auto" >
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ProgressBar Grid.Row="0" x:Name="LoggerProgressBar" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="183" Margin="50,21,0,0"/>

    </Grid>
</Window>
